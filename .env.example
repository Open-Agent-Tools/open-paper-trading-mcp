# Gemini Configuration
GOOGLE_GENAI_USE_VERTEXAI=0
GOOGLE_API_KEY="your-google-api-key"
GOOGLE_MODEL="gemini-1.5-flash-preview-0514"

# Application Configuration
# -------------------------------------------------------------------
# Core Application Settings
# -------------------------------------------------------------------
ENVIRONMENT="development"
DEBUG=True
PROJECT_NAME="Open Paper Trading MCP"
API_V1_STR="/api/v1"

# -------------------------------------------------------------------
# CORS (Cross-Origin Resource Sharing)
# -------------------------------------------------------------------
# A comma-separated list of origins that should be allowed to make cross-origin requests.
# Example: "http://localhost,http://localhost:3000,https://yourdomain.com"
BACKEND_CORS_ORIGINS="http://localhost:3000"

# -------------------------------------------------------------------
# Database Configuration
# -------------------------------------------------------------------
# Use postgresql+asyncpg:// for async connections
DATABASE_URL="postgresql+asyncpg://trading_user:trading_password@localhost:5432/trading_db"


# Logging
LOG_LEVEL=INFO

# MCP Server Configuration
FASTAPI_PORT=2080
MCP_SERVER_PORT=2080
MCP_SERVER_HOST=localhost

# ADK Evaluations (optional)
MCP_HTTP_URL=http://localhost:2080/mcp

# Robinhood Credentials
ROBINHOOD_USERNAME="your_email@example.com"
ROBINHOOD_PASSWORD="your_password"
